{{!-- <!DOCTYPE html> --}}
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Sign-up form</title>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css" />
  <link rel="stylesheet" href="../public/css/style.css">
</head>
<body>
  <div class="container">
    <h1 class="brand"><span>Welcome User </span> Sign-up</h1>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
        <h3>Full Stack Developer</h3>
        <ul>
          <li><i class="fa fa-road"></i>Your address</li>
          <li><i class="fa fa-phone"></i> (+92)-3078376505</li>
          <li><i class="fa fa-envelope"></i>Direct message</li>
        </ul>
      </div>
      <div class="contact">
        <h3>Email Us</h3>
        <form method="POST" action="send">
          <p>
            
            <input type="text" placeholder="Firstname" name="name" required>
          </p>
          <p>
            
            <input type="text" placeholder="Last Name" name="lastname" required>
          </p>
          <p>
            
            <input type="email" placeholder="Email Adress" name="email" required>
          </p>
            <p>
           
            <input type="password" placeholder="Password" name="password" required>
          </p>
            <p>
           
            <input type="cpassword" placeholder="Confirm Password" name="cpassword" required>
          </p>
          <p>
           
            <input type="number" placeholder="Phone Number" name="phone" required>
          </p>
          <p>
             <div>
            <input type="file" id="profile" name="profileImage" >
        </div>
          </p>
         
          <p class="full">
            <button type="submit">Submit</button>
          </p>

        </form>
        <a href="/login">Login</a>
      </div>
    </div>
  </div>
</body>
</html>